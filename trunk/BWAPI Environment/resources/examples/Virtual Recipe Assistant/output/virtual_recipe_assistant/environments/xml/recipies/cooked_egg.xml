<recipe name='cooked_egg' title='cooked egg'>
  
  <requirements>
    <tool id='0' capacity='1000' />
  </requirements>
  
  <actions>
 
    <insert>
      <tool id='0' />
      <ingredient name='water' amount='100' />
    </insert>
    
    <turn_on>
      <tool name='fire' />
    </turn_on>
    
    <insert comment='Wait until the water boils, before adding the egg.'>
      <tool id='0' />
      <ingredient name='egg' amount='1' />
    </insert>    
    
    <turn_off>
      <tool name='fire' />
    </turn_off>
    
    <insert comment='We need to cool down the eggs with cold water.'>
      <tool id='0' />
      <ingredient name='water' amount='100' />
    </insert>    
    
  </actions>
  
</recipe>